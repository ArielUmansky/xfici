<li>
	<%= link_to user.name, user %>
	<% if current_user!=user %>
		<% if current_user.admin? %>
			|
			<%= link_to "Delete", user, method: :delete, confirm: "You sure?" %>
		<% end %>

		<% if current_user.pending_friends.include?(user) %>
			|
			<%= link_to "Cancel Friendship", friendship_path(user, :friendship => { :friend_id => user.id }), method: :delete %>
		<% else %>
			<% if current_user.requested_friends.include?(user) %>
				|
				<%= link_to "Accept Friendship", friendship_path(user, :friendship => { :friend_id => user.id }), method: :put %>
				|
				<%= link_to "Reject Friendship", friendship_path(user, :friendship => { :friend_id => user.id }), method: :delete %>
			<% else %>
				<% if current_user.friends.include?(user) %>
					|
					<%= link_to "Delete Friendship", friendship_path(user, :friendship => { :friend_id => user.id }), method: :delete %>
				<% else %>
					|
					<%= link_to "Request Friendship", friendships_path(:friendship => { :friend_id => user.id }), method: :post %>
				<% end %>
			<% end %>
		<% end %>
	<% end %>
</li>
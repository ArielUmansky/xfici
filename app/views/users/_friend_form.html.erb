<% unless current_user==@user %>
	<div id="friend_form">
		<% if current_user.pending?(@user)%>
			<%= render 'waiting_friendship' %>
		<% else %>
			<% if current_user.requested?(@user)%>
				<%= render 'answer_friendship' %>
			<% else %>
				<% if !current_user.friend?(@user) %>
					<%= render 'request_friendship' %>
				<% else %>
					<%= render 'delete_friendship' %>
				<% end %>
			<% end %>
		<% end %>
	</div>
<% end %>
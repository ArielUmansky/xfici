<h2>Edit Profile Page</h2>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>
      
      <%= f.label :email %>
      <%= f.text_field :email %>
  
      <div class="column">
        <%= f.file_field :avatar, class: "imgInp" %>
        <%= image_tag(current_user.avatar.url, width: 100, height: 100, class: "imgPreview") %>
        <%= f.hidden_field :avatar_cache %> 
      </div>

      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>


<li id="<%= feed_item.id %>">
	<%= link_to avatar_for(feed_item.user, 80), feed_item.user %>
	<span class="user">
		<%= link_to feed_item.user.name, feed_item.user %>
	</span>
	<span class="content">
		<textarea <%= current_user!=feed_item.user ? "disabled" : "enabled" %>  
			onkeyup="autoGrow(this);"><%= feed_item.content %></textarea>
	</span>
	<span class="timestamp">
		Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
	</span>
	<%= render "shared/vote", object: feed_item %>
	<% if current_user == feed_item.user %>
		<span class="deleteLink">
			<%= link_to "delete", feed_item, method: :delete,
			confirm: "You sure?",
			title: feed_item.content %>
		</span>
	<% end %>
	<%= render "comments/comment", object: feed_item %>
</li>
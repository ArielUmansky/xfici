<li id="<%= feed_item.id %>">
	<span class="user">
		<%= link_to feed_item.user.name, feed_item.user %>
	</span>
	<span class="content"><%= feed_item.content %></span>
	<span class="timestamp">
		<%= I18n.t(".shared.time_ago", in_words: time_ago_in_words(feed_item.created_at) )%>
	</span>
	<% if current_user == feed_item.user %>
		<%= link_to I18n.t(".shared.delete"), feed_item, method: :delete,
		confirm: "You sure?",
		title: feed_item.content %>
	<% end %>
</li>
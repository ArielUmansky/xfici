<div class="commentsList", data=<%=object.id%> >
  <% if object.comments.any? %>
    <ul>
      <% object.comments.each do |comment| %>
        <% if (!comment.id.nil?) %>
          <li>
            <%= link_to avatar_for(comment.user, 50), comment.user  %>
            <span class="user">
              <%= link_to comment.user.name, comment.user %>
            </span>
            <span class="content">
            <% if current_user != comment.user %>
                <pre><%= comment.content %></pre>
            <% else %>
                <pre><%=best_in_place [comment.micropost, comment], :content %></pre>
            <% end %>
            </span>
            <span class="timestamp">
              Posted <%= time_ago_in_words(comment.created_at) %> ago.
            </span>
              <% if current_user == comment.user %>
                <span class="deleteLink">
                  <%= link_to "delete", [comment.micropost, comment],
                    method: :delete,
                    title: comment.content, remote: true %>
                </span>
              <% end %>
          </li>
        <% end %>
      <% end %>
    </ul>
  <% end %>
</div>